
<%= form_for @picture do |f| %>

<ul>
	<li> <h2> New Picture </h2> </li>

  <li>
    <div class="label"><%= f.label "artist" %></div><br>
    <div class-"input"><%= f.text_field "artist", :required => true, :placeholder => "John Smith"%></div>

  </li>

  <li>
     <div class="label"><%= f.label "title" %></div><br>
    <div class-"input"><%= f.text_field "title",:required => true, :placeholder => "Night Sky" %></div>
  </li>

  <li>
     <div class="label"><%= f.label "url" %></div><br>
    <div class-"input"><%= f.text_field "url",:required => true, :placeholder => "http://google.com/nightsky.jpeg" %></div>
  </li>

  <li>
    <div id="button"><%= f.submit "Save" %></div>
  </li>

</ul>
<% end %>